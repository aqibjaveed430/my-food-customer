<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_185sdp"
        android:orientation="vertical"
        android:weightSum="6.0">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.4">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_weight="0.1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_accept"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/tv_back"
                    android:textColor="@color/white"
                    android:text="Accept "
                    android:padding="@dimen/_2sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textAlignment="center"
                    android:drawableTop="@drawable/icon_accept_order"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_weight="0.1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_progress"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/tv_back"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:text="Progress"
                    android:padding="@dimen/_2sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textAlignment="center"
                    android:drawableTop="@drawable/icon_progress"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_weight="0.1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_ready"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/tv_back"
                    android:textColor="@color/white"
                    android:text="Ready"
                    android:padding="@dimen/_2sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:textAlignment="center"
                    android:drawableTop="@drawable/icon_ready"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1">

                <TextView
                    android:id="@+id/tv_complete"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/tv_back"
                    android:drawableTop="@drawable/icon_ready"
                    android:padding="@dimen/_2sdp"
                    android:text="Complete"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_shop"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/my_food" />

                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_shop"
                    android:padding="@dimen/_5sdp"
                    android:text="Shop Name"
                    android:textColor="@color/colorText" />

                <ImageButton
                    android:id="@+id/btn_contact"
                    android:layout_width="115dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/tv_shop_name"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/img_shop"
                    android:src="@drawable/icon_contact" />

                <ImageButton
                    android:id="@+id/btn_detail"
                    android:layout_width="115dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/tv_shop_name"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/ic_detail" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="Delivery Time:"
                    android:layout_below="@id/tv_payment_status"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_time_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_payment_status"
                    android:layout_toRightOf="@+id/tv_time"
                    android:text="29-OCt-2019,2:00 PM"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_10sdp" />


                <TextView
                    android:id="@+id/tv_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/red"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="Payment Status :"/>

                <TextView
                    android:id="@+id/tv_payment_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/red"
                    android:layout_toRightOf="@+id/tv_payment"
                    android:text="Status Here"/>


                <TextView
                    android:id="@+id/tv_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_time_date"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="Delivery : "
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_delivery_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_time"
                    android:layout_toRightOf="@id/tv_delivery"
                    android:text="address here "
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_10sdp" />

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_below="@+id/tv_payment_status"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_navi"
                    />


                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_delivery"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="Sub Total :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_sub_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_delivery"
                    android:layout_toRightOf="@id/tv_total"
                    android:text="$ 100.00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_total"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="Delivery Fee :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_delivery_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_total"
                    android:layout_toRightOf="@id/tv_fee"
                    android:text="$0.00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_delivery_method"
                    android:layout_toLeftOf="@id/tv_dis"
                    android:text="Discount :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_delivery_method"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:text="$0.00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />


                <TextView
                    android:id="@+id/tv_payable_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_discount"
                    android:layout_toLeftOf="@+id/tv_payable"
                    android:text="Payable : "
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_payable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_discount"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:text="$100.00"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_weight="0.1">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/btn_pay_bill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/ic_pay_bill" />

                <ImageView
                    android:id="@+id/btn_cancel_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/btn_pay_bill"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/ic_cancel_order" />

                <ImageView
                    android:id="@+id/btn_recieve_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/btn_cancel_order"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/ic_recieve_order" />

            </RelativeLayout>



        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>