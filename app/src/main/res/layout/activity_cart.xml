<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="e.homekitchen.customer.Activity.CartActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="6.0"
    android:layout_height="0.0dip">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@drawable/top_bar">

            <ImageView
                android:id="@+id/iv_menu_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/icon_menu">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Cart "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp">

            </TextView>

            <ImageView
                android:id="@+id/iv_refresh_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/icon_refresh" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_5sdp">
            <LinearLayout
                android:weightSum="0.1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_100sdp">
                <ImageView
                    android:id="@+id/iv_product"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/my_food"/>

                <RelativeLayout
                    android:id="@+id/main_rel_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/tv_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Name"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorText"/>

                    <TextView
                        android:id="@+id/tv_product_type"
                        android:layout_below="@+id/tv_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Type"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_min_time"
                        android:layout_below="@+id/tv_product_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Minimum time required:1 Minute "
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/tv_discount"
                        android:layout_below="@+id/tv_min_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discount : %"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"/>


                </RelativeLayout>

                <RelativeLayout
                    android:padding="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorText"/>

                    <TextView
                        android:id="@+id/tv_veg_type"
                        android:layout_width="wrap_content"
                        android:layout_below="@id/tv_price"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"
                        android:text="Veg"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/red"/>


                    <ImageView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_below="@+id/tv_veg_type"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_alignParentRight="true"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:src="@drawable/icon_arrow"/>

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
